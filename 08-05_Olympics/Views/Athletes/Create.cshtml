@model AthleteModel

<h2>Add an athlete</h2>

@using (Html.BeginForm("Create", "Athletes", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Name)
        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Surname)
        @Html.TextBoxFor(a => a.Surname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.CountryId)
        @Html.TextBoxFor(a => a.CountryId, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(a => a.Id)
    <button type="submit" class="btn btn-primary">Add</button>
    @Html.ActionLink("Cancel", "Index", "Athletes", null, new { @class = "btn btn-secondary" })
} 