@model _08_05_Olympics.Models.ViewModels.IntegratedViewModel
@{
    ViewData["Title"] = "Athletes";
}

<h2 class="d-inline-block mb-4">Athletes</h2>

@Html.ActionLink("Add an athlete", "Create", "Athletes", null, new { @class = "btn btn-primary float-right" })

@if (Model.Athletes.Count == 0)
{
    <p>There are no athletes.</p>
}
else
{
    <table id="athletes" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">Surname</th>
                <th class="text-center">Country</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var athlete in Model.Athletes)
            {
            <tr id="tr-@athlete.Id">
                <td class="text-center">@Html.ActionLink($"{athlete.Id}", "Edit", "Athletes", new { id = athlete.Id })</td>
                <td class="text-center">@Html.ActionLink(athlete.Name, "Edit", "Athletes", new { id = athlete.Id })</td>
                <td class="text-center">@Html.ActionLink(athlete.Surname, "Edit", "Athletes", new { id = athlete.Id })</td>
                <td class="text-center">@athlete.Country.Name</td>
                @*<td class="text-center">@Html.ActionLink("Delete", "Delete", "Athletes", new { id = athlete.Id }, new { @class = "js-delete" })</td>*@
                <td class="text-center">
                    <button id="delete-@athlete.Id" class="fake-link js-delete" data-athlete-id="@athlete.Id">Delete</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#athletes .js-delete").on("click", function () {
                let id = this.id.split('-')[1];

                if (confirm("Are you sure you want to delete this athlete?")) {
                    $.ajax({
                        type: "DELETE",
                        url: 'Athletes/Delete',
                        data: { id: id }
                    });

                    document.getElementById(`tr-${id}`).innerHTML = '';
                }
            });
        });

