@model SportModel
@{
    ViewData["Title"] = "Edit Sport";
}

<h2>Edit sport</h2>

@using (Html.BeginForm("Edit", "Sports", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Name, "Name of sport")
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
    </div>
    <div class="checkbox mb-3">
        <label>
            @Html.CheckBoxFor(s => s.TeamActivity) Team Activity
        </label>
    </div>
    @Html.HiddenFor(s => s.Id)
    <button type="submit" class="btn btn-primary">Save changes</button>
    @Html.ActionLink("Cancel", "Index", "Sports", null, new { @class = "btn btn-secondary" })
} 